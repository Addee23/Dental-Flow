@using Microsoft.AspNetCore.Identity
@using DentalFlow.Models.Auth
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin - DentalFlow</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f9;
        }

        /* Inget overlay, inga fixed-blocks, inga collapse-meny-problem */
        .admin-navbar {
            background-color: #1e1e2d;
        }

            .admin-navbar a {
                color: #fff !important;
                margin-right: 20px;
            }

        .admin-container {
            padding-top: 25px;
        }
    </style>
</head>

<body>

    <!-- ENKEL, SÄKER, FIXAD NAVBAR -->
    <nav class="navbar admin-navbar">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <div>
                <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    Adminpanel
                </a>

                <a class="nav-link d-inline-block" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    Dashboard
                </a>

                <a class="nav-link d-inline-block" asp-area="Admin" asp-controller="Bookings" asp-action="Index">
                    Bokningar
                </a>

                <a class="nav-link d-inline-block" asp-area="" asp-controller="Home" asp-action="Index">
                    Till hemsidan
                </a>
            </div>

            <div class="d-flex align-items-center">
                @if (SignInManager.IsSignedIn(User))
                {
                    <span class="text-light me-3">
                        <i class="bi bi-person-circle"></i> @User.Identity!.Name
                    </span>

                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button class="btn btn-sm btn-outline-light">Logga ut</button>
                    </form>
                }
            </div>

        </div>
    </nav>

    <!-- HUVUDINNEHÅLL -->
    <div class="container admin-container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
