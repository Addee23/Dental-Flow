@{
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Admin Dashboard</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card border-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Totalt antal bokningar</h5>
                <p class="card-text display-6">@ViewBag.TotalBookings</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Antal behandlingar</h5>
                <p class="card-text display-6">@ViewBag.TotalServices</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Kommande bokningar</h5>
                <p class="card-text display-6">@ViewBag.Upcoming</p>
            </div>
        </div>
    </div>
</div>

<a asp-area="Admin" asp-controller="Bookings" asp-action="Index" class="btn btn-primary">
    Gå till bokningar
</a>
