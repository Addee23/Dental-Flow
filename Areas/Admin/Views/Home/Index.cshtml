@{
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* ===============================
           MODERNA STAT CARDS
        =============================== */
    .df-admin-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 22px;
        margin-bottom: 30px;
    }

    .df-admin-card {
        background: #ffffff;
        border-radius: 14px;
        padding: 22px;
        box-shadow: 0px 3px 10px rgba(0,0,0,0.05);
        border: 1px solid #e6ecf5;
        display: flex;
        flex-direction: column;
        gap: 10px;
        transition: 0.2s ease;
        position: relative;
        overflow: hidden;
    }

        .df-admin-card:hover {
            transform: translateY(-4px);
            box-shadow: 0px 6px 18px rgba(0,0,0,0.08);
        }

        .df-admin-card h5 {
            font-size: 18px;
            font-weight: 700;
            color: #073b78;
            margin: 0;
        }

    .df-admin-value {
        font-size: 42px;
        font-weight: 800;
        color: #1A74E4;
        margin: 0;
    }

    /* Ikonbadge i hörnet */
    .df-admin-icon {
        position: absolute;
        top: 12px;
        right: 12px;
        background: #1A74E4;
        color: #fff;
        width: 38px;
        height: 38px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        opacity: 0.85;
    }

    .df-admin-card.success .df-admin-value {
        color: #0d9d58;
    }

    .df-admin-card.success .df-admin-icon {
        background: #0d9d58;
    }

    .df-admin-card.warning .df-admin-value {
        color: #d9a600;
    }

    .df-admin-card.warning .df-admin-icon {
        background: #d9a600;
    }

    /* ===============================
           BUTTONS
        =============================== */
    .df-admin-btn {
        background: #1A74E4;
        color: #fff !important;
        padding: 10px 16px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 14px;
        transition: 0.2s ease;
    }

        .df-admin-btn:hover {
            background: #0d4fa6;
        }

    .df-back {
        text-decoration: none;
        color: #073b78;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        margin-top: 6px;
    }

        .df-back:hover {
            text-decoration: underline;
        }
</style>


<h1 class="mb-4" style="font-weight:800;">Adminpanelen</h1>

<!-- GRID MED SNYGGA STAT CARDS -->
<div class="df-admin-grid">

    <!-- BOKNINGAR -->
    <div class="df-admin-card">
        <div class="df-admin-icon"><i class="fa-solid fa-calendar-check"></i></div>
        <h5>Totalt antal bokningar</h5>
        <p class="df-admin-value">@ViewBag.TotalBookings</p>
    </div>

    <!-- BEHANDLINGAR -->
    <div class="df-admin-card success">
        <div class="df-admin-icon"><i class="fa-solid fa-tooth"></i></div>
        <h5>Antal behandlingar</h5>
        <p class="df-admin-value">@ViewBag.TotalServices</p>
    </div>

    <!-- KOMMANDE -->
    <div class="df-admin-card warning">
        <div class="df-admin-icon"><i class="fa-solid fa-clock"></i></div>
        <h5>Kommande bokningar</h5>
        <p class="df-admin-value">@ViewBag.Upcoming</p>
    </div>

</div>

<!-- BUTTONS -->
<a asp-area="Admin" asp-controller="Bookings" asp-action="Index" class="df-admin-btn">
    Gå till bokningar
</a>


<!-- BACK LINK -->
<a asp-area="" asp-controller="Home" asp-action="Index" class="df-back">
    <i class="fa-solid fa-arrow-left"></i>
    Tillbaka till hemsidan
</a>
