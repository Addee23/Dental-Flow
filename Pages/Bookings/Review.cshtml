@page
@model DentalFlow.Pages.Bookings.ReviewModel
@{
    Layout = "_DentalFlowLayout";
    ViewData["Title"] = "Bekräfta bokning";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    .review-container {
        display: flex;
        justify-content: center;
        margin-top: 40px;
        padding: 20px;
    }

    .review-box {
        width: 100%;
        max-width: 550px;
        background: #ffffff;
        padding: 30px;
        border-radius: 14px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    }

    .review-title {
        text-align: center;
        margin-bottom: 25px;
        font-size: 26px;
        font-weight: 600;
        color: #1f3c88; /* Mörkblå */
    }

    .review-details {
        background: #f7f9fc;
        border-radius: 10px;
        padding: 18px 20px;
        margin-bottom: 25px;
        font-size: 15px;
        line-height: 1.7;
    }

        .review-details div span {
            font-weight: 600;
            color: #1f3c88; /* Mörkblå */
        }

        .review-details strong {
            color: #1f3c88; /* Mörkblå värden */
        }

    .input-label {
        margin-top: 12px;
        font-weight: 600;
        color: #1f3c88; /* Mörkblå */
        display: block;
    }

    .form-input {
        width: 100%;
        padding: 12px;
        border: 1px solid #d7d7d7;
        background: #f3f3f3;
        border-radius: 8px;
        margin-top: 5px;
        font-size: 15px;
        color: #1f3c88; /* Mörkblå text i fält */
        pointer-events: none;
    }

        .form-input:focus {
            outline: none;
            border-color: #84a9ff;
        }

    .btn-confirm {
        width: 100%;
        padding: 14px;
        margin-top: 22px;
        border: none;
        border-radius: 10px;
        background: linear-gradient(135deg, #4c8dff, #1e62d0);
        color: white;
        font-size: 17px;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s ease;
        box-shadow: 0 4px 14px rgba(30, 98, 208, 0.3);
    }

        .btn-confirm:hover {
            background: linear-gradient(135deg, #3b7bed, #154fb3);
            transform: translateY(-2px);
        }
</style>

<div class="review-container">
    <div class="review-box">

        <h2 class="review-title">
            <i class="fa-solid fa-clipboard-check"></i> Bekräfta bokning
        </h2>

        <div class="review-details">
            <div><span>Behandling:</span> <strong>@Model.Service.Name</strong></div>
            <div><span>Datum:</span> <strong>@Model.SelectedDateTime.ToString("yyyy-MM-dd")</strong></div>
            <div><span>Tid:</span> <strong>@Model.SelectedDateTime.ToString("HH:mm")</strong></div>
            <div><span>Pris:</span> <strong>@Model.Service.Price kr</strong></div>
        </div>

        <form method="post" class="review-form">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="ServiceId" />
            <input type="hidden" asp-for="DateTimeString" />

            <label class="input-label">Namn</label>
            <input value="@Model.Name" class="form-input" readonly />

            <label class="input-label">Email</label>
            <input value="@Model.Email" class="form-input" readonly />

            <label class="input-label">Telefon</label>
            <input value="@Model.Phone" class="form-input" readonly />


            <button type="submit" class="btn-confirm">Bekräfta bokning</button>
        </form>

    </div>
</div>
