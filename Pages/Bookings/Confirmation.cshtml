@page
@model DentalFlow.Pages.Bookings.ConfirmationModel
@{
    Layout = "_DentalFlowLayout";
    ViewData["Title"] = "Bokning bekräftad";
}

<div class="confirm-container">
    <div class="confirm-box">
        <h2 class="confirm-title">Tack för din bokning!</h2>

        <p class="confirm-text">
            Din tid är nu bekräftad. Vi har skickat en bekräftelse till din e-post (om angiven).
        </p>

        <div class="confirm-details">
            <div><span>Behandling:</span> <strong>@Model.Booking.Service.Name</strong></div>
            <div><span>Datum:</span> <strong>@Model.Booking.DateTime.ToString("yyyy-MM-dd")</strong></div>
            <div><span>Tid:</span> <strong>@Model.Booking.DateTime.ToString("HH:mm")</strong></div>
            <div><span>Namn:</span> <strong>@Model.Booking.Name</strong></div>
        </div>

        <div class="confirm-actions">
            <a class="btn-home" href="/index">Till startsidan</a>
        </div>
    </div>
</div>

<style>
    .confirm-container {
        display: flex;
        justify-content: center;
        padding-top: 40px;
        padding-bottom: 60px;
    }

    .confirm-box {
        width: 500px;
        background: #fff;
        padding: 28px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        text-align: center;
    }

    .confirm-title {
        font-size: 26px;
        margin-bottom: 15px;
        color: #0077ff;
        font-weight: bold;
    }

    .confirm-text {
        font-size: 16px;
        margin-bottom: 20px;
    }

    .confirm-details {
        text-align: left;
        margin-top: 10px;
        margin-bottom: 20px;
        font-size: 15px;
    }

        .confirm-details span {
            display: inline-block;
            width: 110px;
            color: #666;
        }

    .btn-home {
        background: #0077ff;
        padding: 10px 20px;
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-size: 16px;
        transition: 0.2s;
    }

        .btn-home:hover {
            background: #005fcc;
        }
</style>
