@page
@model ContactModel
@{
    ViewData["Title"] = "Kontakt";
    Layout = "_DentalFlowLayout";
}

<style>
    .contact-wrapper {
        max-width: 850px;
        margin: 40px auto;
        background: var(--paper);
        border: 1px solid var(--border);
        padding: 40px;
        border-radius: 18px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.05);
    }

    .contact-title {
        font-size: 32px;
        font-weight: 700;
        color: var(--blue-900);
        text-align: center;
        margin-bottom: 10px;
    }

    .contact-text {
        text-align: center;
        font-size: 16px;
        color: var(--muted);
        margin-bottom: 30px;
    }

    .contact-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
    }

    .contact-card {
        background: var(--page);
        padding: 20px;
        border-radius: 14px;
        border: 1px solid var(--border);
        text-align: center;
    }

        .contact-card i {
            font-size: 32px;
            color: var(--blue-700);
            margin-bottom: 8px;
        }

        .contact-card h4 {
            font-size: 18px;
            font-weight: 700;
            color: var(--blue-900);
            margin-bottom: 6px;
        }

        .contact-card p {
            color: var(--muted);
            font-size: 15px;
        }

    /* MAP WRAPPER */
    .contact-map-wrapper {
        width: 100%;
        max-width: 850px;
        margin: 30px auto 60px;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    }

        .contact-map-wrapper iframe {
            width: 100%;
            height: 400px;
            border: none;
            display: block;
        }

    /* ===========================================================
                         TABLETS (≤ 900px)
        =========================================================== */
    @@media (max-width: 900px) {
        .contact-wrapper {
            padding: 32px;
            margin: 30px 20px;
        }

        .contact-title {
            font-size: 28px;
        }

        .contact-text {
            font-size: 15px;
        }

        .contact-map-wrapper iframe {
            height: 350px;
        }
    }

    /* ===========================================================
                         MOBILER (≤ 600px)
        =========================================================== */
    @@media (max-width: 600px) {
        .contact-wrapper {
            padding: 24px;
            margin: 20px 14px;
        }

        .contact-title {
            font-size: 26px;
        }

        .contact-text {
            font-size: 14px;
            margin-bottom: 22px;
        }

        .contact-info {
            grid-template-columns: 1fr !important;
            gap: 20px;
        }

        .contact-card {
            padding: 18px;
        }

            .contact-card i {
                font-size: 28px;
            }

            .contact-card h4 {
                font-size: 17px;
            }

        .contact-map-wrapper iframe {
            height: 280px !important;
        }
    }

    /* ===========================================================
                         SMÅ MOBILER (≤ 380px)
        =========================================================== */
    @@media (max-width: 380px) {
        .contact-wrapper {
            padding: 18px;
        }

        .contact-title {
            font-size: 22px;
        }

        .contact-text {
            font-size: 13px;
        }

        .contact-card p {
            font-size: 14px;
        }

        .contact-card i {
            font-size: 26px;
        }

        .contact-map-wrapper iframe {
            height: 240px !important;
        }
    }

    /* ===========================================================
                         ULTRA-SMÅ MOBILER (≤ 320px)
        =========================================================== */
    @@media (max-width: 320px) {
        .contact-wrapper {
            padding: 14px;
        }

        .contact-title {
            font-size: 20px;
        }

        .contact-text {
            font-size: 12px;
        }

        .contact-card {
            padding: 14px;
        }

            .contact-card p {
                font-size: 13px;
            }

            .contact-card i {
                font-size: 22px;
            }

        .contact-map-wrapper iframe {
            height: 210px !important;
        }
    }
</style>


<div class="contact-wrapper">
    <h1 class="contact-title">Kontakta oss</h1>
    <p class="contact-text">
        Har du frågor? Hör av dig – vi hjälper dig gärna!
    </p>

    <div class="contact-info">

        <div class="contact-card">
            <i class="fa-solid fa-envelope"></i>
            <h4>E-post</h4>
            <p>info@dentalflow.se</p>
        </div>

        <div class="contact-card">
            <i class="fa-solid fa-phone"></i>
            <h4>Telefon</h4>
            <p>08-123 456 78</p>
        </div>

        <div class="contact-card">
            <i class="fa-solid fa-location-dot"></i>
            <h4>Adress</h4>
            <p>Storgatan 12, Stockholm</p>
        </div>

    </div>
</div>


<div class="contact-map-wrapper">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2518.743171500558!2d18.0685803!3d59.3293235!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465f77f3e3b0a6c7%3A0x9bca1ca06979cd13!2sStorgatan%2012%2C%20114%2051%20Stockholm!5e0!3m2!1ssv!2sse!4v1701530000000!5m2!1ssv!2sse"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>
