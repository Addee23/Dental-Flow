@{
    Layout = "_DentalFlowLayout";
    ViewData["Title"] = "Mina sidor";
}
<style>
    /* RESPONSIV Boka-tid-knapp */
    .booking-btn {
        display: block;
        text-align: center;
        padding: 14px;
        border-radius: 10px;
        margin-bottom: 20px;
        max-width: 280px;
        width: 100%;
        background: var(--blue-700);
        color: white !important;
        font-weight: 600;
        text-decoration: none;
    }

        .booking-btn:hover {
            background: var(--blue-800);
        }

    /* Mobilfix */
    @@media (max-width: 768px) {
        .booking-btn

    {
        max-width: 100% !important;
        width: 100% !important;
    }

    }
</style>

<div style="padding: 20px;">
    <h1 style="color: var(--blue-800);">Mina sidor</h1>
    <p style="color: var(--muted); margin-bottom: 20px;">
        Välj vad du vill göra.
    </p>

    <!-- RESPONSIV Boka tid-knapp -->
    <a href="/Services/Index" class="booking-btn">
        Boka tid
    </a>

    <div style="display: flex; flex-direction: column; gap: 16px;">

        <a href="/Customer/Bookings"
           style="padding: 16px; background: var(--paper); border: 1px solid var(--border);
                  border-radius: 10px; text-decoration:none; font-weight:600; color:var(--blue-900);">
            📅 Mina bokningar
        </a>

        <a href="/Identity/Account/Manage"
           style="padding: 16px; background: var(--paper); border: 1px solid var(--border);
                  border-radius: 10px; text-decoration:none; font-weight:600; color:var(--blue-900);">
            👤 Mitt konto
        </a>

        <a href="/"
           style="padding: 16px; background: var(--paper); border: 1px solid var(--border);
                  border-radius: 10px; text-decoration:none; font-weight:600; color:var(--blue-900);">
            🏠 Startsidan
        </a>

    </div>
</div>
