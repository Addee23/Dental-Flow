<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Mina sidor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <div class="container-fluid">
        <div class="row">

            <!-- MENY TILL VÄNSTER -->
            <div class="col-3 bg-light vh-100 p-3">
                <h4>Mina sidor</h4>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Index">Översikt</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="MinaBokningar">Mina bokningar</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Profil">Min profil</a></li>
                </ul>
            </div>

            <!-- SIDINNEHÅLL -->
            <div class="col-9 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
