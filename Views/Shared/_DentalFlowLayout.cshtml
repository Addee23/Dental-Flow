@using Microsoft.AspNetCore.Identity
@using DentalFlow.Models.Auth
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="sv" class="df-root">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] — DentalFlow</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        :root {
            --blue-900: #073b78;
            --blue-800: #0d4fa6;
            --blue-700: #1A74E4;
            --blue-400: #4FB4FF;
            --blue-100: #eef5ff;
            --paper: #fff;
            --text: #083b78;
            --muted: #3c6fab;
            --border: #d7e7ff;
            --page: #f3f8ff;
        }

        .dark {
            --blue-900: #cfe3ff;
            --blue-800: #bdd6ff;
            --blue-700: #70a8ff;
            --blue-100: #0f1f38;
            --paper: #0d1a31;
            --text: #eaf1ff;
            --muted: #9ab7e7;
            --border: #2c4167;
            --page: #071225;
        }

        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            background: var(--page);
            color: var(--text);
        }

        header {
            background: var(--paper);
            border-bottom: 1px solid var(--border);
            padding: 14px 22px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            header img {
                height: 26px;
            }

        .df-logo-text {
            font-weight: 700;
            font-size: 18px;
            color: var(--blue-800);
        }

        main {
            padding: 32px 0;
        }

        .container {
            max-width: 720px;
            margin: auto;
            padding: 0 16px;
        }

        .df-nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px;
        }

        .df-logo img {
            height: 26px;
        }

        .df-nav-center {
            display: flex;
            gap: 24px;
        }

        .df-link {
            text-decoration: none;
            font-weight: 600;
            color: var(--text);
        }

            .df-link:hover {
                color: var(--blue-700);
            }

        .df-actions {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .df-login-btn {
            background: var(--blue-700);
            color: #fff;
            padding: 8px 14px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
        }

            .df-login-btn:hover {
                background: var(--blue-800);
            }

        .df-burger {
            display: none;
            background: none;
            border: 0;
            font-size: 22px;
            color: var(--text);
        }

        .df-mobile-menu {
            display: none;
            flex-direction: column;
            gap: 10px;
            background: var(--paper);
            border-bottom: 1px solid var(--border);
            padding: 12px 22px;
        }

        .df-mobile-link {
            text-decoration: none;
            font-weight: 600;
            color: var(--text);
        }

        .df-mobile-login {
            margin-top: 6px;
            background: var(--blue-700);
            color: #fff;
            text-align: center;
            padding: 8px 12px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .df-nav-center {
                display: none;
            }

            .df-login-btn {
                display: none;
            }

            .df-burger {
                display: inline-flex;
            }
        }

        @@media (min-width: 768px) {
            .df-burger {
                display: none !important;
            }
        }

        @@media (min-width: 768px) {
            #dfMobileMenu {
                display: none !important;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <header class="df-nav">
        <a class="df-logo" asp-page="/Index">
            <img src="/images/dentalflow-logo-blue.svg" alt="DentalFlow">
        </a>

        <!-- DESKTOP NAV -->
        <nav class="df-nav-center">
            <a asp-page="/Index" class="df-link">Hem</a>
            <a asp-page="/Services/Index" class="df-link">Behandlingar</a>
            <a asp-page="/Booking/SelectDate" class="df-link">Boka tid</a>
            <a asp-page="/Contact" class="df-link">Kontakt</a>

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <a href="/Admin" class="df-link" style="color:var(--blue-700); font-weight:700;">
                    Adminpanel
                </a>
            }
        </nav>

        <div class="df-actions">

            @if (SignInManager.IsSignedIn(User))
            {
                <a href="/Identity/Account/Manage" class="df-login-btn">Mitt konto</a>

                <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm" style="display:inline;">
                    <button type="submit"
                            class="df-login-btn"
                            style="background:var(--blue-800);">
                        Logga ut
                    </button>
                </form>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Login" class="df-login-btn">Logga in</a>
            }

            <button id="dfBurger" class="df-burger" aria-label="Öppna meny">
                <i class="fa-solid fa-bars"></i>
            </button>
        </div>
    </header>

    <!-- MOBILE NAV -->
    <nav id="dfMobileMenu" class="df-mobile-menu">
        <a asp-page="/Index" class="df-mobile-link">Hem</a>
        <a asp-page="/Services/Index" class="df-mobile-link">Behandlingar</a>
        <a asp-page="/Booking/SelectDate" class="df-mobile-link">Boka tid</a>
        <a asp-page="/Contact" class="df-mobile-link">Kontakt</a>

        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <a href="/Admin" class="df-mobile-link" style="font-weight:700;">
                Adminpanel
            </a>
        }

        @if (SignInManager.IsSignedIn(User))
        {
            <a href="/Identity/Account/Manage" class="df-mobile-login">Mitt konto</a>

            <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutFormMobile" style="margin-top:6px;">
                <button type="submit" class="df-mobile-login" style="background:var(--blue-800);">
                    Logga ut
                </button>
            </form>
        }
        else
        {
            <a asp-area="Identity" asp-page="/Account/Login" class="df-mobile-login">Logga in</a>
        }
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)

    <script>
        const burger = document.getElementById('dfBurger');
        const mobile = document.getElementById('dfMobileMenu');

        burger?.addEventListener('click', () => {
            const open = mobile.style.display === 'flex';
            mobile.style.display = open ? 'none' : 'flex';
        });
    </script>

</body>
</html>
