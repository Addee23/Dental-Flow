@using Microsoft.AspNetCore.Identity
@using DentalFlow.Models.Auth
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="sv" class="df-root">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] — DentalFlow</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>

        /* ============================================
                                 GLOBALT
            ============================================ */

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            width: 100%;
            overflow-x: hidden;
            font-family: 'Inter', sans-serif;
            background: var(--page);
            color: var(--text);
        }

        :root {
            --blue-900: #073b78;
            --blue-800: #0d4fa6;
            --blue-700: #3C7DE0;
            --blue-600: #2d82f4;
            --blue-500: #4fa3ff;
            --paper: #ffffff;
            --page: #f3f8ff;
            --text: #073b78;
            --muted: #4f6f98;
            --border: #d7e7ff;
        }

        /* ============================================
                                 NAVBAR
            ============================================ */

        header.df-nav {
            background: var(--paper);
            border-bottom: 1px solid var(--border);
            padding: 12px 18px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: nowrap !important;
            min-width: 0;
        }

        .df-logo img {
            height: 40px;
        }

        @@media (max-width: 900px) {
            .df-logo img {
                height: 28px;
            }
        }

        .df-nav-center {
            display: flex;
            gap: 22px;
            align-items: center;
            margin: 0 auto;
        }

        .df-link {
            color: var(--blue-900);
            font-weight: 600;
            text-decoration: none;
            transition: 0.2s ease;
        }

            .df-link:hover {
                color: var(--blue-700);
            }

        /* ============================================
                        LOGIN-ACTIONS & BURGER
            ============================================ */

        .df-login-actions {
            display: flex;
            align-items: center;
            flex-wrap: nowrap !important;
            gap: 8px !important;
            min-width: 0;
            flex-shrink: 1 !important;
        }

        .df-login-btn {
            background: var(--blue-700);
            color: white !important;
            padding: 6px 12px !important;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            cursor: pointer;
            transition: 0.2s;
            white-space: nowrap !important;
            flex-shrink: 1 !important;
        }

            .df-login-btn:hover {
                background: var(--blue-800);
            }

        .df-burger {
            display: none;
            font-size: 24px;
            background: none;
            border: none;
            padding: 6px;
            cursor: pointer;
            margin-left: 4px;
            flex-shrink: 0 !important;
        }

        /* ============================================
                       RESPONSIVT BETEENDE
            ============================================ */

        /* När burgermenyn aktiveras → dölj login-knapparna */
        @@media (max-width: 1100px) {
            .df-nav-center {
                display: none !important;
            }

            .df-burger {
                display: inline-block !important;
            }

            .df-login-actions .df-login-btn {
                display: none !important;
            }
        }

        @@media (max-width: 600px) {
            header.df-nav {
                padding-left: 12px !important;
                padding-right: 12px !important;
            }
        }

        /* ============================================
                                 MOBILMENY
            ============================================ */

        .df-mobile-menu {
            display: none;
            flex-direction: column;
            gap: 14px;
            padding: 20px;
            background: var(--paper);
            border-bottom: 1px solid var(--border);
            text-align: center;
        }

            .df-mobile-menu.open {
                display: flex !important;
            }

        .df-mobile-link {
            color: var(--blue-900);
            font-weight: 600;
            font-size: 17px;
            text-decoration: none;
        }

        .df-mobile-login {
            background: var(--blue-700);
            color: white;
            padding: 10px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
        }

        /* ============================================
                                 MAIN
            ============================================ */

        main.container {
            max-width: 720px;
            margin: auto;
            padding: 0 16px;
        }

        /* ============================================
                                 FOOTER
            ============================================ */

        .df-footer {
            width: 100%;
            background: var(--paper);
            border-top: 1px solid var(--border);
            padding: 40px 0 20px;
        }

        .df-footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 22px;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
        }

        .df-footer-col h4 {
            font-size: 18px;
            margin-bottom: 16px;
            color: var(--blue-900);
        }

        .df-footer-col p,
        .df-footer-col a {
            font-size: 15px;
            color: var(--muted);
            margin: 6px 0;
            text-decoration: none;
            transition: 0.2s ease;
        }

            .df-footer-col a:hover {
                color: var(--blue-700);
            }

        .df-social {
            display: flex;
            gap: 14px;
            margin-top: 12px;
        }

            .df-social a {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background: var(--blue-700);
                color: white;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: 0.2s ease;
            }

                .df-social a:hover {
                    background: var(--blue-900);
                }

        .df-footer-bottom {
            text-align: center;
            margin-top: 38px;
            padding-top: 16px;
            font-size: 14px;
            color: var(--muted);
            border-top: 1px solid var(--border);
        }

        @@media (max-width: 1100px) {
            .df-footer-content {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 650px) {
            .df-footer-content {
                grid-template-columns: 1fr !important;
                text-align: center;
                justify-items: center;
            }
        }

        /* ============================================
                   EXTREMT SMÅ SKÄRMAR (iPhone SE)
            ============================================ */

        @@media (max-width: 360px) {
            .df-login-actions {
                gap: 4px !important;
            }

            .df-login-btn {
                padding: 4px 8px !important;
                font-size: 12px !important;
                max-width: 90px !important;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

            .df-burger {
                font-size: 20px !important;
                margin-left: 6px !important;
            }

            .df-logo img {
                height: 24px !important;
            }
        }

        /* ============================================
                   ULTRA SMÅ SKÄRMAR (<300px)
            ============================================ */

        @@media (max-width: 300px) {
            /* Redundant nu egentligen — men kvar om du vill behålla det */
            .df-login-btn {
                display: none !important;
            }

            .df-burger {
                display: inline-block !important;
                font-size: 18px !important;
            }

            header.df-nav {
                padding-left: 8px !important;
                padding-right: 8px !important;
            }
        }

    </style>



    @RenderSection("Styles", required: false)
</head>

<body>

    <!-- ============================
             NAVBAR
    ============================ -->
    <header class="df-nav">

        <!-- LOGO -->
        <a class="df-logo" asp-page="/Index">
            <img src="/images/dentalflow-logo-blue.svg" alt="DentalFlow" />
        </a>

        <!-- CENTRERAD NAV-MENY -->
        <nav class="df-nav-center">
            <a href="/" class="df-link">Hem</a>
            <a asp-page="/Services/Index" class="df-link">Behandlingar</a>

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Customer"))
            {
                <a asp-page="/Bookings/Index" class="df-link">Boka tid</a>
            }

            <a asp-page="/About" class="df-link">Om oss</a>
            <a asp-page="/Contact" class="df-link">Kontakt</a>

            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-controller="Customer" asp-action="Index" class="df-link">Mina sidor</a>
            }

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <a href="/Admin" class="df-link" style="color: var(--blue-700); font-weight: 700;">Adminpanel</a>
            }
        </nav>

        <!-- LOGIN & BURGER (HÖGER) -->
        <div class="df-login-actions">
            @if (SignInManager.IsSignedIn(User))
            {
                <a href="/Identity/Account/Manage" class="df-login-btn">Mitt konto</a>

                <form method="post" asp-area="Identity" asp-page="/Account/Logout" style="display:inline;">
                    <button type="submit" class="df-login-btn" style="background:var(--blue-800);">Logga ut</button>
                </form>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Login" class="df-login-btn">Logga in</a>
            }

            <button id="dfBurger" class="df-burger">
                <i class="fa-solid fa-bars"></i>
            </button>
        </div>

    </header>

    <!-- ============================
             MOBILMENY
    ============================ -->
    <nav id="dfMobileMenu" class="df-mobile-menu">
        <a asp-page="/Index" class="df-mobile-link">Hem</a>
        <a asp-page="/Services/Index" class="df-mobile-link">Behandlingar</a>

        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Customer"))
        {
            <a asp-page="/Bookings/Index" class="df-mobile-link">Boka tid</a>
        }

        <a asp-page="/About" class="df-mobile-link">Om oss</a>
        <a asp-page="/Contact" class="df-mobile-link">Kontakt</a>

        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-controller="Customer" asp-action="Index" class="df-mobile-link">Mina sidor</a>
        }

        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <a href="/Admin" class="df-mobile-link">Adminpanel</a>
        }

        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-area="Identity" asp-page="/Account/Manage" class="df-mobile-login">Mitt konto</a>

            <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                <button type="submit" class="df-mobile-login" style="background:var(--blue-800);">Logga ut</button>
            </form>
        }
        else
        {
            <a asp-area="Identity" asp-page="/Account/Login" class="df-mobile-login">Logga in</a>
        }
    </nav>

    <!-- ============================
                MAIN
    ============================ -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- ============================
                FOOTER
    ============================ -->
    <footer class="df-footer">

        <div class="df-footer-content">

            <div class="df-footer-col">
                <img src="/images/dentalflow-logo-blue.svg" class="df-footer-logo" style="height:40px; margin-bottom:12px;" />
                <p>Enkelt, tryggt och modernt bokningssystem för tandvård.</p>
            </div>

            <div class="df-footer-col">
                <h4>Länkar</h4>
                <a asp-page="/Index">Hem</a>
                <a asp-page="/Services/Index">Behandlingar</a>
                <a asp-page="/About">Om oss</a>
                <a asp-page="/Contact">Kontakt</a>
                <a asp-area="Identity" asp-page="/Account/Login">Logga in</a>
            </div>

            <div class="df-footer-col">
                <h4>Kontakt</h4>
                <p>E-post: info@dentalflow.se</p>
                <p>Telefon: 08-123 456 78</p>
            </div>

            <div class="df-footer-col">
                <h4>Följ oss</h4>
                <div class="df-social">
                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-tiktok"></i></a>
                    <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
            </div>

        </div>

        <div class="df-footer-bottom">
            © @DateTime.Now.Year DentalFlow — Alla rättigheter förbehållna
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    @RenderSection("Scripts", required: false)

    <script>
        const burger = document.getElementById("dfBurger");
        const mobile = document.getElementById("dfMobileMenu");

        burger.addEventListener("click", () => {
            mobile.style.display = mobile.style.display === "flex" ? "none" : "flex";
        });
    </script>

</body>
</html>
