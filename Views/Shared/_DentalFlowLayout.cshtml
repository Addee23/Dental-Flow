@using Microsoft.AspNetCore.Identity
@using DentalFlow.Models.Auth
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="sv" class="df-root">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] — DentalFlow</title>

    <!-- Font Awesome för ikoner -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        /* ============================================
                   GLOBALT
                ============================================ */
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            width: 100%;
            overflow-x: hidden;
            font-family: 'Inter', sans-serif;
            background: var(--page);
            color: var(--text);
        }

        .df-root {
            width: 100%;
            overflow-x: hidden;
        }

        /* ============================================
                   FÄRG-TEMA
                ============================================ */
        :root {
            --blue-900: #073b78;
            --blue-800: #0d4fa6;
            --blue-700: #1A74E4;
            --blue-600: #2d82f4;
            --blue-500: #4fa3ff;
            --paper: #ffffff;
            --page: #f3f8ff;
            --text: #073b78;
            --muted: #4f6f98;
            --border: #d7e7ff;
        }

        /* ============================================
                   HEADER / NAV
                ============================================ */
        header.df-nav {
            background: var(--paper);
            border-bottom: 1px solid var(--border);
            padding: 14px 18px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .df-link {
            color: var(--blue-900);
            font-weight: 600;
            text-decoration: none;
            transition: 0.2s;
        }

            .df-link:hover {
                color: var(--blue-700);
            }

        .df-login-btn {
            background: var(--blue-700) !important;
            color: #fff !important;
            padding: 8px 16px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            cursor: pointer;
            transition: 0.2s;
        }

            .df-login-btn:hover {
                background: var(--blue-800) !important;
            }

        .df-burger {
            display: none;
            background: none;
            border: none;
            color: var(--text);
            font-size: 24px;
        }

        .df-nav-center {
            display: flex;
            gap: 22px;
        }

        /* ============================================
                   MOBILMENY
                ============================================ */
        .df-mobile-menu {
            display: none;
            flex-direction: column;
            gap: 14px;
            background: var(--paper);
            border-bottom: 1px solid var(--border);
            padding: 16px 20px;
        }

        .df-mobile-link {
            color: var(--text);
            font-weight: 600;
            text-decoration: none;
        }

        .df-mobile-login {
            background: var(--blue-700);
            color: #fff;
            padding: 8px 12px;
            border-radius: 8px;
            text-align: center;
            font-weight: 600;
            text-decoration: none;
        }

        /* ============================================
                   MAIN
                ============================================ */
        main.container {
            max-width: 720px;
            margin: auto;
            padding: 0 16px;
            width: 100%;
        }

        /* ============================================
                   FOOTER
                ============================================ */
        .df-footer {
            background: var(--paper);
            border-top: 1px solid var(--border);
            padding: 50px 22px 20px;
            margin-top: 60px;
        }

        .df-footer-content {
            max-width: 1100px;
            margin: auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 40px;
        }

        .df-footer-col h4 {
            font-size: 18px;
            margin-bottom: 12px;
            font-weight: 700;
            color: var(--blue-800);
        }

        .df-footer-col a,
        .df-footer-col p {
            margin: 6px 0;
            color: var(--muted);
            text-decoration: none;
            font-weight: 500;
        }

            .df-footer-col a:hover {
                color: var(--blue-800);
                text-decoration: underline;
            }

        .df-footer-logo {
            height: 36px;
            margin-bottom: 12px;
        }

        .df-footer-bottom {
            text-align: center;
            border-top: 1px solid var(--border);
            margin-top: 40px;
            padding-top: 18px;
            color: var(--muted);
            font-size: 14px;
        }

        /* ============================================
                   SOCIALA MEDIER
                ============================================ */
        .df-social {
            display: flex;
            gap: 14px;
            margin-top: 12px;
        }

            .df-social a {
                width: 38px;
                height: 38px;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
                background: var(--blue-700);
                color: #fff;
                text-decoration: none;
                font-size: 18px;
                transition: 0.25s ease;
            }

                .df-social a:hover {
                    background: var(--blue-800);
                    transform: translateY(-3px);
                }

        @@media (max-width: 768px) {
            .df-social

        {
            justify-content: center;
        }

        }

        /* ============================================
                   RESPONSIV NAV
                ============================================ */
        @@media (max-width: 900px) {
            .df-nav-center

        {
            display: none !important;
        }

        .df-login-btn {
            display: none !important;
        }

        .df-burger {
            display: inline-flex !important;
        }

        }

        @@media (max-width: 768px) {
            .df-footer-content

        {
            display: flex !important;
            flex-direction: column !important;
            align-items: center !important;
            text-align: center !important;
            gap: 32px !important;
        }

        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>

    <!-- HEADER -->
    <header class="df-nav">
        <a class="df-logo" asp-page="/Index">
            <img src="/images/dentalflow-logo-blue.svg" alt="DentalFlow">
        </a>

        <nav class="df-nav-center">
            <a href="/" class="df-link">Hem</a>
            <a asp-page="/Services/Index" class="df-link">Behandlingar</a>

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Customer"))
            {
                <a asp-page="/Booking/Index" class="df-link">Boka tid</a>
            }

            <a asp-page="/About" class="df-link">Om oss</a>
            <a asp-page="/Contact" class="df-link">Kontakt</a>

            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-controller="Customer" asp-action="Index" class="df-link">Mina sidor</a>
            }

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <a href="/Admin" class="df-link" style="color:var(--blue-700); font-weight:700;">Adminpanel</a>
            }
        </nav>

        <div>
            @if (SignInManager.IsSignedIn(User))
            {
                <a href="/Identity/Account/Manage" class="df-login-btn">Mitt konto</a>

                <form method="post" asp-area="Identity" asp-page="/Account/Logout" style="display:inline;">
                    <button type="submit" class="df-login-btn" style="background:var(--blue-800);">Logga ut</button>
                </form>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Login" class="df-login-btn">Logga in</a>
            }

            <button id="dfBurger" class="df-burger">
                <i class="fa-solid fa-bars"></i>
            </button>
        </div>
    </header>

    <!-- MOBILMENY -->
    <nav id="dfMobileMenu" class="df-mobile-menu">
        <a asp-page="/Index" class="df-mobile-link">Hem</a>
        <a asp-page="/Services/Index" class="df-mobile-link">Behandlingar</a>

        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Customer"))
        {
            <a asp-page="/Booking/Index" class="df-mobile-link">Boka tid</a>
        }

        <a asp-page="/About" class="df-mobile-link">Om oss</a>
        <a asp-page="/Contact" class="df-mobile-link">Kontakt</a>

        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-controller="Customer" asp-action="Index" class="df-mobile-link">Mina sidor</a>
        }

        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <a href="/Admin" class="df-mobile-link">Adminpanel</a>
        }

        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-area="Identity" asp-page="/Account/Manage" class="df-mobile-login">Mitt konto</a>

            <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                <button type="submit" class="df-mobile-login" style="background:var(--blue-800);">Logga ut</button>
            </form>
        }
        else
        {
            <a asp-area="Identity" asp-page="/Account/Login" class="df-mobile-login">Logga in</a>
        }
    </nav>

    <!-- MAIN CONTENT -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="df-footer">

        <div class="df-footer-content">

            <div class="df-footer-col logo-col">
                <img src="/images/dentalflow-logo-blue.svg" class="df-footer-logo" />
                <p>Enkelt, tryggt och modernt bokningssystem för tandvård.</p>
            </div>

            <div class="df-footer-col">
                <h4>Länkar</h4>
                <a asp-page="/Index">Hem</a>
                <a asp-page="/Services/Index">Behandlingar</a>
                <a asp-page="/About">Om oss</a>
                <a asp-page="/Contact">Kontakt</a>
                <a asp-area="Identity" asp-page="/Account/Login">Logga in</a>
            </div>

            <div class="df-footer-col">
                <h4>Kontakt</h4>
                <p>E-post: info@dentalflow.se</p>
                <p>Telefon: 08-123 456 78</p>
            </div>

            <!-- SOCIALA MEDIER -->
            <div class="df-footer-col">
                <h4>Följ oss</h4>
                <div class="df-social">
                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-tiktok"></i></a>
                    <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
            </div>

        </div>

        <div class="df-footer-bottom">
            © @DateTime.Now.Year DentalFlow — Alla rättigheter förbehållna
        </div>

    </footer>

    @RenderSection("Scripts", required: false)

    <script>
        const burger = document.getElementById('dfBurger');
        const mobile = document.getElementById('dfMobileMenu');
        burger?.addEventListener('click', () => {
            mobile.style.display = mobile.style.display === 'flex' ? 'none' : 'flex';
        });
    </script>

</body>
</html>
